<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/webtodolist_db"
              auth="Container" type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              maxTotal="20" maxIdle="5" maxWaitMillis="10000"
              username="root" password=""
              url="jdbc:mysql://127.0.0.1:3306/webtodolist_db?useSSL=false"/>
    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           DataSourceName="jdbc/webtodolist_db" localDataSource="true" userTable="account"
           userRoleTable="account_role" userNameCol="accountname" userCredCol="account_password"
           roleNameCol="account_role"/>
</Context>
